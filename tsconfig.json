{
  "references": [
    {
      "path": "./packages/core"
    },
    {
      "path": "./packages/web"
    },
    {
      "path": "./packages/server"
    }
  ],
  "compilerOptions": {
    "resolveJsonModule": true,
    "declaration": true,
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "composite": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "types": [
      "node"
    ]
  }
}
